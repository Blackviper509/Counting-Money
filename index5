<!DOCTYPE html>
<html>
<head>
<title>Counting Coins</title>
</head>
<body>
  <div id="coin-counter">
    <h1>Counting Coins</h1>
    <div id="penny-section">
      <h2>Pennies</h2>
      <p>Number of Pennies: <span id="penny-count"></span></p>
      <p>Total Value: $<span id="penny-total"></span></p>
      <button id="add-penny">Add 1</button>
      <button id="subtract-penny">Subtract 1</button>
    </div>
    <div id="nickel-section">
      <h2>Nickels</h2>
      <p>Number of Nickels: <span id="nickel-count"></span></p>
      <p>Total Value: $<span id="nickel-total"></span></p>
      <button id="add-nickel">Add 1</button>
      <button id="subtract-nickel">Subtract 1</button>
    </div>
    <div id="dime-section">
      <h2>Dimes</h2>
      <p>Number of Dimes: <span id="dime-count"></span></p>
      <p>Total Value: $<span id="dime-total"></span></p>
      <button id="add-dime">Add 1</button>
      <button id="subtract-dime">Subtract 1</button>
    </div>
    <div id="quarter-section">
      <h2>Quarters</h2>
      <p>Number of Quarters: <span id="quarter-count"></span></p>
      <p>Total Value: $<span id="quarter-total"></span></p>
      <button id="add-quarter">Add 1</button>
      <button id="subtract-quarter">Subtract 1</button>
    </div>
    <div id="halfdollar-section">
      <h2>Half Dollars</h2>
      <p>Number of Half Dollars: <span id="halfdollar-count"></span></p>
      <p>Total Value: $<span id="halfdollar-total"></span></p>
      <button id="add-halfDollar">Add 1</button>
      <button id="subtract-halfDollar">Subtract 1</button>
    </div>
    <div id="total-section">
      <h2>Total Value</h2>
      <p>Total Value of all Coins: $<span id="total-value"></span></p>
    </div>
  </div>
<script>
let pennyCount = 0;
let nickelCount = 0;
let dimeCount = 0;
let quarterCount = 0;
let halfdollarCount = 0;
let totalValue = 0;

function updateDisplay() 
{
    document.getElementById("penny-count").innerHTML = pennyCount;
    document.getElementById("penny-total").innerHTML = pennyCount * 0.01;
    document.getElementById("nickel-count").innerHTML = nickelCount;
    document.getElementById("nickel-total").innerHTML = nickelCount * 0.05;
    document.getElementById("dime-count").innerHTML = dimeCount;
    document.getElementById("dime-total").innerHTML = dimeCount * 0.1;
    document.getElementById("quarter-count").innerHTML = quarterCount;
    document.getElementById("quarter-total").innerHTML = quarterCount * 0.25;
    document.getElementById("halfdollar-count").innerHTML = halfdollarCount;
    document.getElementById("halfdollar-total").innerHTML = halfdollarCount * 0.50;
    document.getElementById("total-value").innerHTML = (pennyCount * 0.01) + (nickelCount * 0.05) + (dimeCount * 0.1) + (quarterCount * 0.25) + (halfdollarCount * 0.50);
}

document.getElementById("add-penny").addEventListener("click", function(){
    pennyCount++;
    updateDisplay();
});
document.getElementById("add-nickel").addEventListener("click", function(){
    nickelCount++;
    updateDisplay();
});
document.getElementById("add-dime").addEventListener("click", function(){
    dimeCount++;
    updateDisplay();
});
document.getElementById("add-quarter").addEventListener("click", function(){
    quarterCount++;
    updateDisplay();
});
document.getElementById("add-halfDollar").addEventListener("click", function(){
        halfdollarCount++;
        updateDisplay();
});

document.getElementById("subtract-penny").addEventListener("click", function(){
    if (pennyCount > 0) {
        pennyCount--;
        updateDisplay();
    }
});
document.getElementById("subtract-nickel").addEventListener("click", function(){
    if (nickelCount > 0) {
        nickelCount--;
        updateDisplay();
    }
});
document.getElementById("subtract-dime").addEventListener("click", function(){
    if (dimeCount > 0) {
        dimeCount--;
        updateDisplay();
    }
});
document.getElementById("subtract-quarter").addEventListener("click", function(){
    if (quarterCount > 0) {
        quarterCount--;
        updateDisplay();
    }
});
document.getElementById("subtract-halfDollar").addEventListener("click", function(){
    if (halfdollarCount > 0) {
        halfdollarCount--;
        updateDisplay();
    }
});
document.getElementById("total-value").addEventListener("click", function(){
        totalValue = (pennyCount * 0.01) + (nickelCount * 0.05) + (dimeCount * 0.1) + (quarterCount * 0.25) + (halfdollarCount * 0.50);
        updateDisplay();
});

updateDisplay();

</script>
</html>